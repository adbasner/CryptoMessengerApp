<h4 class="ui center aligned medium icon header">
  <i class="circular orange wechat icon"></i>
  Say Something
</h4>

<div class="ui two column stackable grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      
      <div class="content">
        <div class="ui feed">
          <%= render '/messages/messages', messages: @messages %>
        </div> <!-- uifeed -->
      </div> <!-- content -->
      <!--add a message bar -->
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message...">
              <i class="bordered inverted orange edit icon"></i>
            </div>
          </div>
        </form>
      </div> <!--add a message bar -->

    </div>
  </div> <!-- 12widecolumn -->

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu fluid">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div> <!-- 4widecolumn -->
</div> <!-- 12ColumnGric -->